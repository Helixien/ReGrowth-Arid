<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="PlantBase">
		<defName>RG-D_Plant_FlowerCactus</defName>
		<label>flower cactus</label>
		<description>A tiny cactus with a purple flower growing on it.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>4</Beauty>
			<Nutrition>0.18</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/FlowerCactus</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<hideAtSnowDepth>0.3</hideAtSnowDepth>
		<ingestible />
		<plant>
			<fertilitySensitivity>0.0</fertilitySensitivity>
			<growDays>2.5</growDays>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<fertilityMin>0.04</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<maxMeshCount>25</maxMeshCount>
			<visualSizeRange>0.4~0.7</visualSizeRange>
			<topWindExposure>0.1</topWindExposure>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>8</wildClusterWeight>
			<wildOrder>1</wildOrder>
			<purpose>Beauty</purpose>
		</plant>
	</ThingDef>

	<ThingDef ParentName="PlantBase">
		<defName>RG-D_Plant_PitahayaCactus</defName>
		<label>pitahaya</label>
		<description>A large cactus native to arid Earth environments. It grows a redish fruit that can be cooked or eaten raw.</description>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<Nutrition>0.35</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/DragonFruitPlant</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.55, 0.2, 0.2)</volume>
				<offset>(0,0,-0.25)</offset>
			</shadowData>
		</graphicData>
		<selectable>true</selectable>
		<neverMultiSelect>false</neverMultiSelect>
		<fillPercent>0.20</fillPercent>
		<pathCost>30</pathCost>
		<plant>
			<lifespanDaysPerGrowDays>40</lifespanDaysPerGrowDays>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0.1</fertilitySensitivity>
			<growDays>6</growDays>
			<immatureGraphicPath>Things/Plant/Immature/DragonFruitPlant_Immature</immatureGraphicPath>
			<harvestYield>8</harvestYield>
			<harvestWork>450</harvestWork>
			<harvestTag>Standard</harvestTag>
			<harvestAfterGrowth>0.30</harvestAfterGrowth>
			<harvestedThingDef>RG-D_RawDragonFruits</harvestedThingDef>
			<wildClusterRadius>5</wildClusterRadius>
			<wildClusterWeight>250</wildClusterWeight>
			<visualSizeRange>0.8~1.4</visualSizeRange>
			<topWindExposure>0.15</topWindExposure>
			<wildOrder>2</wildOrder>
			<purpose>Food</purpose>
		</plant>
	</ThingDef>

	<ThingDef ParentName="TreeBase">
		<defName>RG-D_Plant_AngelWingsCactus</defName>
		<label>angel wings cactus</label>
		<description>A small cactus native to arid Earth environments. It's meat can be harvested for food.</description>
		<statBases>
			<MaxHitPoints>130</MaxHitPoints>
			<Nutrition>1.2</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/AngelWingsCactus</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.24, 0.3, 0.15)</volume>
				<offset>(0,0,-0.38)</offset>
			</shadowData>
		</graphicData>
		<fillPercent>0.35</fillPercent>
		<plant>
			<lifespanDaysPerGrowDays>40</lifespanDaysPerGrowDays>
			<fertilityMin>0.02</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>5</growDays>
			<visualSizeRange>0.7~1.5</visualSizeRange>
			<harvestWork>500</harvestWork>
			<harvestYield>15</harvestYield>
			<harvestMinGrowth>0.5</harvestMinGrowth>
			<harvestedThingDef>RG_RawCactus</harvestedThingDef>
			<harvestTag>Standard</harvestTag>
			<topWindExposure>0.08</topWindExposure>
			<wildClusterRadius>-1</wildClusterRadius>
		</plant>
	</ThingDef>

	<ThingDef ParentName="TreeBase">
		<defName>RG-D_Plant_DesertPalmTree</defName>
		<label>palm tree</label>
		<description>A desert tree with a tall, naked trunk topped by a cluster of very broad leaves. Unfortunately, this variety doesn't produce any edible coconuts.</description>
		<graphicData>
			<texPath>Things/Plant/PalmTree</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.2, 0.35, 0.13)</volume>
				<offset>(-0.03,0,-0.44)</offset>
			</shadowData>
		</graphicData>
		<statBases>
			<Beauty>2</Beauty>
		</statBases>
		<plant>
			<growDays>46</growDays>
			<visualSizeRange>2.2~3.0</visualSizeRange>
			<harvestWork>900</harvestWork>
			<harvestYield>32</harvestYield>
		</plant>
	</ThingDef>

</Defs>