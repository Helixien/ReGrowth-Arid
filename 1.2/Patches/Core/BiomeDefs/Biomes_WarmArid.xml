<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Core</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<!-- ================ Arid Shrubland ================ -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/BiomeDef[defName="AridShrubland"]/wildPlants</xpath>
					<value>
						<RG-D_Plant_FlowerCactus>0.8</RG-D_Plant_FlowerCactus>
						<RG-D_Plant_AngelWingsCactus>0.4</RG-D_Plant_AngelWingsCactus>
					</value>
				</li>
				<!-- ================ Biome Desert ================ -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/BiomeDef[defName="Desert"]/wildPlants</xpath>
					<value>
						<RG-D_Plant_FlowerCactus>0.5</RG-D_Plant_FlowerCactus>
						<RG-D_Plant_AngelWingsCactus>1.0</RG-D_Plant_AngelWingsCactus>
						<RG-D_Plant_DesertPalmTree>0.65</RG-D_Plant_DesertPalmTree>
						<RG-D_Plant_PitahayaCactus>0.15</RG-D_Plant_PitahayaCactus>
					</value>
				</li>
				<!-- ================ Biome Extreme Desert ================ -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/BiomeDef[defName="ExtremeDesert"]/wildPlants</xpath>
					<value>
						<RG-D_Plant_AngelWingsCactus>0.8</RG-D_Plant_AngelWingsCactus>
						<RG-D_Plant_DesertPalmTree>0.1</RG-D_Plant_DesertPalmTree>
						<RG-D_Plant_PitahayaCactus>0.04</RG-D_Plant_PitahayaCactus>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>