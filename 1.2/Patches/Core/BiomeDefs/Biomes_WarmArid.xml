<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Core</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <!-- ================ Biome Arid Shrubland ================ -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/BiomeDef[defName="AridShrubland"]/wildPlants</xpath>
                    <value>
						<RG-DE_Plant_DesertDandelion>0.6</RG-DE_Plant_DesertDandelion>
                    </value>
                </li>

				<!-- ================ Biome Desert ================ -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/BiomeDef[defName="Desert"]/wildPlants</xpath>
                    <value>
							<RG-DE_Plant_DesertGrass>12.0</RG-DE_Plant_DesertGrass>
						<RG-DE_Plant_DesertDandelion>0.6</RG-DE_Plant_DesertDandelion>
						<RG-DE_Plant_OrangeZyllia>0.3</RG-DE_Plant_OrangeZyllia>
						<RG-DE_Plant_PurpleZyllia>0.3</RG-DE_Plant_PurpleZyllia>
						<RG-DE_Plant_JoshuaTree>0.8</RG-DE_Plant_JoshuaTree>
					</value>
                </li>
				
				<!-- ================ Biome Extreme Desert ================ -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/BiomeDef[defName="ExtremeDesert"]/wildPlants</xpath>
                    <value>
						<RG-DE_Plant_DesertDandelion>0.6</RG-DE_Plant_DesertDandelion>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>