<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--=============== Desert Grass ==============-->
	<ThingDef ParentName="PlantBase">
		<defName>RG_Plant_AridGrass</defName>
		<label>grass</label>
		<description>Wild grass. Grows in arid regions where there is little light and minimally fertile ground.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Flammability>1.2</Flammability>
			<Nutrition>0.20</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/DesertGrass</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<ingestible/>
		<plant>
			<fertilityMin>0.03</fertilityMin>
			<fertilitySensitivity>0.3</fertilitySensitivity>
			<growDays>2.5</growDays>
			<leaflessGraphicPath>Things/Plant/Grass_Leafless</leaflessGraphicPath>
			<harvestWork>40</harvestWork>
			<maxMeshCount>9</maxMeshCount>
			<visualSizeRange>0.4~0.6</visualSizeRange>
			<topWindExposure>0.4</topWindExposure>
			<wildOrder>1</wildOrder>
		</plant>
	</ThingDef>
	<!--=============== Desert Dandelion ==============-->
	<ThingDef ParentName="PlantBase">
		<defName>Plant_DesertDandelion</defName>
		<label>dandelions</label>
		<description>A tiny orange flower which grows in large clusters. Though it is often considered a weed, dandelions in bloom are quite beautiful.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>4</Beauty>
			<BeautyOutdoors>4</BeautyOutdoors>
			<Nutrition>0.25</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/DesertDandelion</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<ingestible/>
		<plant>
			<fertilitySensitivity>0.0</fertilitySensitivity>
			<growDays>2.5</growDays>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<fertilityMin>0.05</fertilityMin>
			<maxMeshCount>25</maxMeshCount>
			<visualSizeRange>0.3~0.4</visualSizeRange>
			<topWindExposure>0.3</topWindExposure>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>8</wildClusterWeight>
			<wildOrder>1</wildOrder>
			<purpose>Beauty</purpose>
		</plant>
	</ThingDef>
	<!--=============== Flower Cactus ==============-->
	<ThingDef ParentName="PlantBase">
		<defName>RG_FlowerCactus</defName>
		<label>flower cactus</label>
		<description>A tiny cactus with a purple flower growing on it.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>4</Beauty>
			<Nutrition>0.18</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/FlowerCactus</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<hideAtSnowDepth>0.3</hideAtSnowDepth>
		<ingestible/>
		<plant>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>2.5</growDays>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<fertilityMin>0.04</fertilityMin>
			<maxMeshCount>25</maxMeshCount>
			<visualSizeRange>0.3~0.6</visualSizeRange>
			<topWindExposure>0.1</topWindExposure>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>8</wildClusterWeight>
			<wildOrder>1</wildOrder>
			<purpose>Beauty</purpose>
		</plant>
	</ThingDef>
	<!--=============== Wing Cactus ==============-->
	<ThingDef ParentName="TreeBase">
		<defName>RG_Plant_WingCactus</defName>
		<label>wing cactus</label>
		<description>A small cactus native to arid environments. It's meat can be harvested for food.</description>
		<statBases>
			<MaxHitPoints>130</MaxHitPoints>
			<Nutrition>1.2</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/WingsCactus</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.24, 0.3, 0.15)</volume>
				<offset>(0,0,-0.38)</offset>
			</shadowData>
		</graphicData>
		<fillPercent>0.35</fillPercent>
		<plant>
			<lifespanDaysPerGrowDays>40</lifespanDaysPerGrowDays>
			<fertilityMin>0.02</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>8</growDays>
			<visualSizeRange>0.5~1.3</visualSizeRange>
			<harvestWork>500</harvestWork>
			<harvestYield>15</harvestYield>
			<harvestMinGrowth>0.5</harvestMinGrowth>
			<harvestedThingDef>RG_RawCactus</harvestedThingDef>
			<harvestTag>Standard</harvestTag>
			<topWindExposure>0.08</topWindExposure>
			<wildClusterRadius>-1</wildClusterRadius>
		</plant>
	</ThingDef>
	<!--=============== Joshua Tree ==============-->
	<ThingDef ParentName="TreeBase">
		<defName>RG_Plant_JoshuaTree</defName>
		<label>joshua tree</label>
		<description>An arid tree with a sturdy trunk topped by a cluster of long, spiky leaves. This hardy desert dweller has adapted to survive in arid conditions.</description>
		<graphicData>
			<texPath>Things/Plant/JoshuaTree</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.2, 0.35, 0.13)</volume>
				<offset>(-0.03,0,-0.44)</offset>
			</shadowData>
		</graphicData>
		<statBases>
			<Beauty>1</Beauty>
		</statBases>
		<plant>
			<growDays>15</growDays>
			<visualSizeRange>1.5~2.5</visualSizeRange>
			<harvestWork>330</harvestWork>
			<harvestYield>15</harvestYield>
		</plant>
	</ThingDef>
</Defs>